# Core target configuration
CONFIG_IDF_TARGET="esp32s3"
CONFIG_SPIRAM_BOOT_INIT=y
CONFIG_SPIRAM=y
CONFIG_SPIRAM_USE_MEMMAP=y
CONFIG_SPIRAM_TYPE_AUTO=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_BANKSWITCH_ENABLE=y
CONFIG_SPIRAM_MALLOC_ALWAYSINTERNAL=16384

# Logging and debugging
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y

# LVGL & graphics defaults
CONFIG_LV_CONF_SKIP=y
CONFIG_LVGL_TICK_CUSTOM=y
CONFIG_LV_COLOR_DEPTH_16=y
CONFIG_LV_COLOR_16_SWAP=y
CONFIG_LV_MEM_CUSTOM=y

# Storage / SD
CONFIG_SDMMC_HOST_DEFAULT_SPEED=y
CONFIG_SDMMC_USE_1LINE_MODE=y

# Application defaults (Kconfig symbols defined in Kconfig file)
CONFIG_APP_MAX_TERRARIUMS=4
CONFIG_APP_AUTOSAVE_INTERVAL_S=120
CONFIG_APP_ENABLE_COMPRESSION=n
CONFIG_APP_ENABLE_WIFI_OTA=n
CONFIG_APP_ENABLE_TTS_STUB=n
CONFIG_APP_LANG_DEFAULT="fr"
CONFIG_APP_THEME_HIGH_CONTRAST=y
CONFIG_APP_ASSET_CACHE_CAPACITY=8
CONFIG_APP_ASSET_CACHE_HASH_BUCKETS=64
CONFIG_APP_ASSET_CACHE_IDLE_GRACE_TICKS=3
CONFIG_APP_ASSET_CACHE_MAX_PATH=256
CONFIG_BSP_SD_BUS_WIDTH_1BIT=y
CONFIG_BSP_USB_CAN_SELECTABLE=y
CONFIG_BSP_BATTERY_MONITOR=y
CONFIG_BSP_BATTERY_ADC_UNIT_1=y
CONFIG_BSP_BATTERY_ADC_CHANNEL=4
CONFIG_BSP_BATTERY_ATTEN_DB_11=y
CONFIG_BSP_BATTERY_DIVIDER_RHIGH_KOHM=200
CONFIG_BSP_BATTERY_DIVIDER_RLOW_KOHM=100
CONFIG_BSP_BATTERY_OFFSET_MV=0
CONFIG_BSP_BATTERY_SAMPLES=16
CONFIG_BSP_BATTERY_FILTER_ALPHA_NUM=1
CONFIG_BSP_BATTERY_FILTER_ALPHA_DEN=4
CONFIG_APP_CORE_LINK_UART_PORT=1
CONFIG_APP_CORE_LINK_UART_TX_PIN=43
CONFIG_APP_CORE_LINK_UART_RX_PIN=44
CONFIG_APP_CORE_LINK_UART_BAUD=2000000
CONFIG_APP_CORE_LINK_HANDSHAKE_TIMEOUT_MS=5000
CONFIG_APP_CORE_LINK_STATE_TIMEOUT_MS=4000
CONFIG_APP_CORE_LINK_FULL_REFRESH_TIMEOUT_MS=12000
CONFIG_APP_CORE_LINK_PING_TIMEOUT_MS=800
